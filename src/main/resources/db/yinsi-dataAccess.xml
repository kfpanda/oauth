	<!-- 数据源配置,使用应用内的DBCP数据库连接池 -->
	<bean id="yinsiDataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<!-- Connection Info -->
		<property name="driverClassName" value="${yinsi.jdbc.driver}" />
		<property name="url" value="${yinsi.jdbc.url}" />
		<property name="username" value="${yinsi.jdbc.username}" />
		<property name="password" value="${yinsi.jdbc.password}" />

		<!-- Connection Pooling yinsi -->
		<!-- Connection Pooling yinsi -->
		<property name="initialSize" value="${yinsi.dbcp.initialSize}" />
		<property name="maxIdle" value="${yinsi.dbcp.maxIdle}" />
		<property name="minIdle" value="${yinsi.dbcp.minIdle}" />
		<property name="maxActive" value="${yinsi.dbcp.maxActive}" />
		<property name="testOnBorrow" value="true" />
		<property name="testOnReturn" value="true" />
		<property name="testWhileIdle" value="true" />
		<property name="timeBetweenEvictionRunsMillis" value="1800000" />
		<property name="numTestsPerEvictionRun" value="3" />
		<property name="minEvictableIdleTimeMillis" value="1800000" />
		<!-- <property name="poolPreparedStatements" value="true" />
		<property name="maxOpenPreparedStatements" value="200" /> -->
		<property name="removeAbandoned" value="true" />
		<property name="validationQuery" value="SELECT 1 FROM DUAL" />
	</bean>
	
	<bean id="yinsiJdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="yinsiDataSource" />
	</bean>
	
	<bean id="nameJdbcTemplate" class="org.springframework.jdbc.core.namedparam.NamedParameterJdbcTemplate">
		<constructor-arg name="dataSource" ref="yinsiDataSource" />
	</bean>

